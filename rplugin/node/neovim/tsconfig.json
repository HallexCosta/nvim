{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "lib": ["es2019", "dom"],
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "target": "ESNext",
    "rootDir": "src",
    "incremental": false
  },
  "include": ["src"]
}
